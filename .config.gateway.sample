#!/usr/bin/env bash
# base configuration
PARENT_CONFIG=".config.default"
FORCE_INSTALL=0

# device config
DIST_DEVICE="orangepi5-plus"
DIST_NAME="armbian_bookworm_aarch64"

#  os config
CONF_TIMEZONE="Asia/Seoul"
JB_USERID=test
JB_SSHPUBKEY="ssh-rsa  root@com"

# network settings
RUN_OS_SYSTEMD=0
JB_IFUPDOWN=
JB_WANINF=
## dhcp or 192.168.5.2(first ip of subnet become gw ip, 192.168.5.1)
JB_WAN="dhcp"
JB_WANGW=
JB_LANINF=
JB_LAN="192.168.79.1/24"
# DURELAN1 - DURELAN9
JB_LAN1INF=
JB_LAN1="192.168.89.1/24"
JB_WLANINF=
JB_WLAN="192.168.100.1/24"
JB_WLAN_APMODE=1
JB_WLAN_SSID="durejangbi"
JB_WLAN_PASS="durejangbi"

# role: gateway / client / wstunnel
JB_ROLE="gateway"

# network apps
RUN_NET_KNOCKD=1
KNOCKD_STATIC_SSH="12345,54321,24680,13579"
RUN_NET_SSHD=1
SSHD_PORT="22"
SSHD_INFS="LAN"

# iptables
RUN_NET_IPTABLES=1
IPTABLES_OVERRIDE=""
# net rules
IPTABLES_BLACK_NAMELIST="https://raw.githubusercontent.com/stamparm/ipsum/master/ipsum.txt"
# host rules
# masquerade inside to outside ex) LAN<WAN|WLAN<WAN
IPTABLES_MASQ="LAN<WAN"
IPTABLES_PORTFORWARD=""
IPTABLES_DMZ=""
IPTABLES_SUPERDMZ=0

RUN_NET_XTABLES=0

# gateway apps
RUN_NET_HOSTAPD=1
RUN_NET_DNSMASQ=1
DNSMASQ_BLACKLIST_URLS="https://raw.githubusercontent.com/StevenBlack/hosts/master/hosts"
RUN_NET_DNSCRYPTPROXY=1
RUN_NET_DARKSTAT=1
RUN_OS_REDIS=1
RUN_OS_MINMON=1
RUN_NET_WSTUNNEL=0
RUN_SOCKS5PROXY=0